      <form class="form-inline my-2 my-lg-0">
        <a class="btn btn-danger" id="logout-btn">Logout</a>
      </form>
      <script>
        document.getElementById('logout-btn').addEventListener('click', function () {
          // Show the confirmation popup
          if (confirm('Are you sure you want to log out?')) {
            // If user clicks 'Yes', proceed with the logout request
            fetch('/user/logout', {
              method: 'POST', // Assuming you're using a POST request for logout
              headers: {
                'Content-Type': 'application/json'
              }
            }).then(response => {
              if (response.ok) {
                // Redirect to the login page or any desired page after logout
                window.location.href = '/';
              } else {
                alert('Failed to log out');
              }
            }).catch(error => {
              console.error('Error during logout:', error);
            });
          }
        });
      </script>
